{% macro button(label, class, type, id, href, attributes) %}
    {%- if type == 'link' -%}

		<a href="{{ href|default('#') }}" class="btn{% if class is not empty %} {{ class }}{% endif %}"{% if id is not empty %} id="{{ id }}"{% endif %} role="button" {% if attributes is not empty %} {{ attributes|raw }}{% endif %}>{{ label|default('button')|raw }}</a>

    {%- elseif type == 'input' -%}

		<input type="button" class="btn{% if class is not empty %} {{ class }}{% endif %}"{% if id is not empty %} id="{{ id }}"{% endif %} value="{{ label|default('button')|raw }}"{% if attributes is not empty %} {{ attributes|raw }}{% endif %}{% if 'is-disabled' in class %} disabled="disabled"{% endif %} />

	{%- elseif type == 'submit' -%}

		<input type="submit" class="btn{% if class is not empty %} {{ class }}{% endif %}"{% if id is not empty %} id="{{ id }}"{% endif %} value="{{ label|default('button')|raw }}"{% if attributes is not empty %} {{ attributes|raw }}{% endif %}{% if 'is-disabled' in class %} disabled="disabled"{% endif %} />

	{%- else -%}

		<button class="btn{% if class is not empty %} {{ class }}{% endif %}"{% if id is not empty %} id="{{ id }}"{% endif %}{% if attributes is not empty %} {{ attributes|raw }}{% endif %}{% if 'is-disabled' in class %} disabled="disabled"{% endif %}>{{ label|default('button')|raw }}</button>

	{%- endif -%}
{% endmacro %}


{%- macro button_group(buttons) -%}
	<div class="btn__group">
	{%- for button in buttons -%}
		{{ button }}
	{%- endfor -%}
	</div>
{%- endmacro -%}


{%- macro link(label, href, class, id, attributes) -%}
	<a href="{{ href|default('#') }}"{% if class is not empty %} class="{{ class }}"{% endif %}{% if id is not empty %} id="{{ id }}"{% endif %}{% if attributes is not empty %} {{ attributes|raw }}{% endif %}>{{ label|default('link')|raw }}</a>
{%- endmacro -%}


{%- macro tabs(tab_labels, active_tab = 1) -%}
	{% import _self as html %}
	<ul class="tabs__list">
	{%- for tab_label in tab_labels -%}
		
		{% if loop.index == active_tab %}
			{% set class = ' class=is-active' %}
		{% else %}
			{% set class = '' %}
		{% endif %}

		<li{{ class }}>{{ html.link(tab_label, '#tab_' ~ loop.index, null, null, 'data-toggle="tab"') }}</li>
	{%- endfor -%}
	</ul>
{%- endmacro -%}


{%- macro tabs_content(tab_contents, active_tab = 1) -%}
	<div class="tabs__content">
	{%- for tab_content in tab_contents -%}

		{% if loop.index == active_tab %}
			{% set class = ' is-active' %}
		{% else %}
			{% set class = '' %}
		{% endif %}

		<div class="tab__pane{{ class }}" id="tab_{{ loop.index }}">
			{{ tab_content|raw }}
		</div>
	{%- endfor -%}
	</div>
{%- endmacro -%}


{%- macro icon(icon_name, class) -%}
	<i class="icon-{{ icon_name }} {{ class }}"></i>
{%- endmacro -%}