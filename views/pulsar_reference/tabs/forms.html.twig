<form class="form--horizontal">
  <fieldset>
    <legend>Text inputs</legend>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Text input</label>
	      <div class="controls">
	      	<input type="text" class="form__control" id="exampleInputEmail" placeholder="Placeholder text">
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Text input with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline</label>
	      <div class="controls">
	      	<input type="text" class="form__control" id="exampleInputEmail" placeholder="Placeholder text">
	      	<p class="help-block">Example block-level help text here.</p>
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputPassword" class="control__label">Password</label>
	      <div class="controls">
	      	<input type="password" class="form__control" id="exampleInputPassword" placeholder="Password">
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Textarea (1 row)</label>
	      <div class="controls">
	      	<textarea class="form__control" id="exampleInputTextarea" placeholder="Textarea" rows="1"></textarea>
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Textarea (2 rows)</label>
	      <div class="controls">
	      	<textarea class="form__control" id="exampleInputTextarea" placeholder="Textarea" rows="2"></textarea>
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Textarea (3 rows)</label>
	      <div class="controls">
	      	<textarea class="form__control" id="exampleInputTextarea" placeholder="Textarea" rows="3"></textarea>
	      	<p class="help-block">Your help text should be short and concise but when it wraps multiple lines, it sticks to the baseline.</p>
	      </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Textarea (4 rows)</label>
	      <div class="controls">
	      	<textarea class="form__control" id="exampleInputTextarea" placeholder="Textarea" rows="4"></textarea>
	      </div>
	    </div>

	<fieldset>
    	<legend>Selections</legend>

    	<div class="form__group">
	      <label for="exampleInputFile" class="control__label">File input</label>
	      <div class="controls">
		      <input type="file" id="exampleInputFile">
		      <p class="help-block">Example block-level help text here.</p>
		   </div>
	    </div>

	    <div class="form__group">
	      <label for="exampleInputEmail" class="control__label">Select</label>
	      <div class="controls">
	      	<select class="form__control">
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
				<option>5</option>
			</select>
	      </div>
	    </div>

	</fieldset>
	<fieldset>
		<legend>Checkboxes &amp; Radios</legend>

	    <div class="form__group">
	    	<label class="checkbox-label">Checkbox with label on the left</label>
		    <div class="controls">
		        <input type="checkbox">
		    </div>
		</div>

		<div class="form__group">
	    	<label class="radio-label">Radio with label on the left</label>
		    <div class="controls">
		        <input type="radio">
		    </div>
		</div>

		<div class="form__group">
		    <div class="checkbox">
		      <label>
		        <input type="checkbox"> Checkbox with label on the right
		      </label>
		    </div>
		</div>

		<div class="form__group">
		    <div class="radio">
		      <label>
		        <input type="radio"> Radio with label on the right
		      </label>
		    </div>
		</div>

		<div class="form__group">
			<div class="checkbox">
				<label>
					<input type="checkbox" name="optionsRadios" id="optionsRadios1" value="option1" checked>
					Checkbox group item one
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="optionsRadios" id="optionsRadios2" value="option2">
					Checkbox group item two
				</label>
			</div>
		</div>

		<div class="form__group">
			<div class="radio">
				<label>
					<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
					Radio group item one
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
					Radio group item two
				</label>
			</div>
		</div>

		<div class="form__group">
			<div class="checkbox">
				<label class="checkbox--inline">
					<input type="checkbox" id="inlineCheckbox1" value="option1"> Inline
				</label>
				<label class="checkbox--inline">
					<input type="checkbox" id="inlineCheckbox2" value="option2"> Check
				</label>
				<label class="checkbox--inline">
					<input type="checkbox" id="inlineCheckbox3" value="option3"> Boxes
				</label>
			</div>
		</div>

		<div class="form__group">
			<div class="radio">
				<label class="radio--inline">
					<input type="radio" name="inlineRadios" id="inlineRadio1" value="option1"> Inline
				</label>
				<label class="radio--inline">
					<input type="radio" name="inlineRadios" id="inlineRadio2" value="option2"> Radio
				</label>
				<label class="radio--inline">
					<input type="radio" name="inlineRadios" id="inlineRadio3" value="option3"> Buttons
				</label>
			</div>
		</div>

	</fieldset>
	<fieldset>
		<legend>States</legend>

		<div class="form__group has-warning">
			<label class="control__label" for="inputWarning">Input with warning</label>
			<div class="controls">
				<input type="text" class="form__control" id="inputWarning">
			</div>
		</div>
		
		<div class="form__group has-error">
			<label class="control__label" for="inputError">Input with error</label>
			<div class="controls">
				<input type="text" class="form__control" id="inputError">
			</div>
		</div>

		<div class="form__group has-success">
			<label class="control__label" for="inputSuccess">Input with success</label>
			<div class="controls">
				<input type="text" class="form__control" id="inputSuccess" />
			</div>
		</div>

	</fieldset>
	<fieldset>
		<legend>Input groups</legend>

		<div class="form__group">
			<label class="control__label" for="inputSuccess">Prepended input</label>
			<div class="controls">
				<div class="input-group">
					<span class="input-group-addon">@</span>
					<input type="text" class="form__control" placeholder="Username">
				</div>
			</div>
		</div>

		<div class="form__group">
			<label class="control__label" for="inputSuccess">Appended input</label>
			<div class="controls">
				<div class="input-group">
					<input type="text" class="form__control" placeholder="http://www">
					<span class="input-group-addon">.com</span>
				</div>
			</div>
		</div>

		<div class="form__group">
			<label class="control__label" for="inputSuccess">Prepended &amp; Appended</label>
			<div class="controls">
				<div class="input-group">
					<span class="input-group-addon">&pound;</span>
					<input type="text" class="form__control" placeholder="">
					<span class="input-group-addon">.00</span>
				</div>
			</div></div>

	    <!-- <div class="form__group form-actions">
	    	<button type="submit" class="btn btn-default">Submit</button>
	    </div> -->

  </fieldset>

	<fieldset>
		<legend>Sizes</legend>		

			<div class="form__group form__group--mini">
				<label class="control__label" for="inputWarning">Mini</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

			<div class="form__group form__group--small">
				<label class="control__label" for="inputWarning">Small</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

			<div class="form__group form__group--medium">
				<label class="control__label" for="inputWarning">Medium</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

			<div class="form__group">
				<label class="control__label" for="inputWarning">Regular</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

			<div class="form__group form__group--large">
				<label class="control__label" for="inputWarning">Large</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

			<div class="form__group form__group--full">
				<label class="control__label" for="inputWarning">Full</label>
				<div class="controls">
					<input type="text" class="form__control" id="inputWarning">
				</div>
			</div>

	</fieldset>


</form>