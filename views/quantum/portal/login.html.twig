{% extends '@pulsar/quantum/layouts/base.html.twig' %}
{% import '@pulsar/pulsar/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% block content %}
    {{ form.create(class = 'form__login') }}
    {{ form.fieldset_start('Traffic Penalty Tribunal Authority Portal') }}
        {{ form.text(label = 'Email address') }}
        {{ form.password(label = 'Password') }}
    {{ form.fieldset_end() }}
    {{ 
        form.form_end([
            form.submit(
                label = 'Sign In',
                class = 'btn--primary'
            )
        ]) 
    }}
{% endblock %}
