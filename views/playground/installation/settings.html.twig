{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Site Settings' %}

{% set tab_settings %}
    {% include 'playground/installation/tabs/details.html.twig' %}
{% endset %}
{% set tab_metadata %}
    {% include 'playground/installation/tabs/metadata.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "settings",
          "label" : "Site settings",
          "src"   : tab_settings,
          "active": true
        },
        {
          "id"    : "metadata",
          "label" : "Metadata",
          "src"   : tab_metadata
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}
