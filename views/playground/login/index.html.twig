{% extends 'pulsar/layouts/base.html.twig' %}

{% block body %}
	<img class="signin-brand" src="../../../../images/branding/jadu-white.svg" />

<div class="signin-container">
	<div class="signin">
		<div class="signin__inner">

			<form class="signin__panel signin-form">
				<div class="signin__icon"></div><!--
				--><span class="signin__info">University of Leeds</span>

				<div class="signin__group">
					<input class="signin__input is-empty" name="username" type="text" placeholder="username" autocomplete="off" tabindex="1" autofocus />
				</div>

				<div class="signin__group">
					<input class="signin__input" name="password" type="password" placeholder="password" autocomplete="off" tabindex="2" />
				</div>

				<div class="signin__actions">
					<button class="btn btn--primary signin__submit" name="signin-submit" type="submit">Sign In</button>
				</div>

				<a class="signin__link" href="#forgot">Forgotten password?</a>
			</form>

			<form class="signin__panel signin-reset" name="reset">
				<div class="signin__icon"></div>

				<span class="signin__info">Enter the email address you use for your Jadu account and we’ll send you a link to reset your password</span>

				<div class="signin__group">
					<input class="signin__input" name="reset-email" type="text" placeholder="Email address" autocomplete="off" tabindex="-1" />
				</div>

				<div class="signin__actions">
					<button class="btn btn--primary signin__submit" name="reset-submit" type="submit" tabindex="-1">Email Me</button>
				</div>

				<a class="signin__link" href="#" tabindex="-1">Don’t know your email address?</a><br />
				<a class="signin__link" href="#signin" tabindex="-1">Cancel</a>
			</form>

			<form class="signin__panel signin-twostep" name="twostep">
				<div class="signin__icon"></div>

				<span class="signin__info">2-step verification is enabled for your account<br />Enter the code generated by your <a href="#">authenticator app</a></span>

				<div class="signin__group">
					<input class="signin__code1" name="twoStepOne" maxlength="3" type="text" placeholder="123" autocomplete="off" autofocus tab-index="-1" />
					<input class="signin__code2" name="twoStepTwo" maxlength="3" type="text" placeholder="456" autocomplete="off" tab-index="-1"  />
				</div>

				<div class="signin__actions">
					<button class="btn btn--primary signin__submit" name="signin-twostep" type="submit" tab-index="-1">Verify Me</button>
				</div>

				<a class="signin__link" href="#" tab-index="-1">What does this mean?</a>
			</form>

			<div class="signin__panel signin-success">
				<div class="signin__icon"></div>
			</div>

		</div>
	</div>
</div>
