{% extends '@pulsar/pulsar/layouts/tabbed.html.twig' %}

{% import '@pulsar/pulsar/helpers/tabs.html.twig' as tabs %}

{% set tab_summary %}{% include 'playground/nav_main/tabs/summary.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Utilities",
            "class": "",
            "href": '#utilities',
            "icon": "wrench",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Admin statistics",
                        "href": "#admin-stats",
                        "data-toggle": "tab"
                    }
                }
            }
        }
    }
%}

{%
  set tabs_content = [
    {
      "id"        : "components",
      "label"     : "Admin statistics",
      "sub_tabs"  : [
        {
          "id"    : "admin-summary",
          "label" : "Summary",
          "src"   : tab_summary
        },
        {
          "id"    : "admin-activity",
          "label" : "Activity log",
          "src"   : ""
        },
        {
          "id"    : "admin-access",
          "label" : "Page access log",
          "src"   : ""
        },
        {
          "id"    : "admin-devices",
          "label" : "Devices and browsers",
          "src"   : ""
        }
      ]
    },
    {
      "id"        : "admin-reporting",
      "label"     : "Reporting",
      "sub_tabs"  : [
        {
          "id"    : "reports",
          "label" : "Reports",
          "src"   : ""
        }
      ]
    }
  ]
%}

{% block tabs_list %}
    {{ tabs.tabs(tabs_content) }}
{% endblock %}

{% block tabs_content %}
  {{ tabs.tabs_content(tabs_content) }}
{% endblock %}
