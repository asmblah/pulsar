{% extends 'layout.html.twig' %}
{% import 'pulsar/helpers/html.html.twig' as html %}
{% import 'pulsar/helpers/form.html.twig' as form %}
{% import 'pulsar/helpers/flash.html.twig' as flash %}
 
{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Pulsar Lexicon' %}

{% 
    set actions_menu = [
        html.link(label = html.icon('save') ~ ' Save', href = '#save'),
        html.link(label = html.icon('print') ~ ' Print', href = '#print'),
        html.divider(),
        html.link(label = html.icon('trash') ~ ' Delete', href = '#delete', class = 'link--danger')
    ]
%}

{% block tabs_list %}
{{ 
    html.tabs(tabs = [
        {'components': html.icon('puzzle-piece') ~ ' Components', 
          'tabs': [
            {'buttons':  html.icon('plus-sign-alt') ~ ' Buttons'},
            {'table':    html.icon('table') ~ ' Table'},
            {'decks':    html.icon('columns') ~ ' Decks'},
            {'flash':    html.icon('warning-sign') ~ ' Flash messages'},
            {'forms':    html.icon('check-sign') ~ ' Forms'},
            {'modals':   html.icon('list-alt') ~ ' Modals'},
            {'popovers': html.icon('comment') ~ ' Popovers'},
            {'progress': html.icon('tasks') ~ ' Progress bars'},
            {'tooltips': html.icon('quote-left') ~ ' Tooltips'},
            {'type':     html.icon('font') ~ ' Typography'}
          ]
        },
        {'examples': html.icon('desktop') ~ ' UI Examples', 
            'tabs': [
              {'summary': html.icon('bar-chart') ~ ' Table with summary'},
              {'filter':  html.icon('filter') ~ ' Table with filters'}
            ]
        }
      ]
    )
}}
{% endblock %}

{% set tab_buttons %}
    {% include 'lexicon/tabs/buttons_labels.html.twig' %}
{% endset %}

{% set tab_decks %}
    {% include 'lexicon/tabs/decks.html.twig' %}
{% endset %}

{% set tab_flash %}
    {% include 'lexicon/tabs/flash.html.twig' %}
{% endset %}

{% set tab_forms %}
    {% include 'lexicon/tabs/forms.html.twig' %}
{% endset %}

{% set tab_modals %}
    {% include 'lexicon/tabs/modals.html.twig' %}
{% endset %}

{% set tab_tooltips %}
    {% include 'lexicon/tabs/tooltips.html.twig' %}
{% endset %}

{% set tab_data_grid %}
    {% include 'lexicon/tabs/datagrid.html.twig' %}
{% endset %}

{% set tab_progress_bars %}
    {% include 'lexicon/tabs/progress_bars.html.twig' %}
{% endset %}

{% set tab_typography %}
    {% include 'lexicon/tabs/typography.html.twig' %}
{% endset %}

{% set tab_form_summary %}
    {% include 'lexicon/tabs/analytics.html.twig' %}
{% endset %}

{% block tabs_content %}
{{ 
  html.tabs_content(
    tabs = [
      {'buttons':  tab_buttons},
      {'table':    tab_data_grid}, 
      {'decks':    tab_decks}, 
      {'flash':    tab_flash}, 
      {'forms':    tab_forms}, 
      {'modals':   tab_modals}, 
      {'progress': tab_progress_bars}, 
      {'tooltips': tab_tooltips}, 
      {'type':     tab_typography}, 
      {'summary':  tab_form_summary}
    ]
  ) 
}}
{% endblock %}
