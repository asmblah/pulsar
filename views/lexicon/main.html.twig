{% extends 'layout.html.twig' %}
{% import 'pulsar/helpers/html.html.twig' as html %}
{% import 'pulsar/helpers/form.html.twig' as form %}
{% import 'pulsar/helpers/flash.html.twig' as flash %}
 
{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Pulsar Lexicon' %}

{% 
    set actions_menu = [
        html.link(label = html.icon('save') ~ ' Save', href = '#save'),
        html.link(label = html.icon('print') ~ ' Print', href = '#print'),
        html.divider(),
        html.link(label = html.icon('trash') ~ ' Delete', href = '#delete', class = 'link--danger')
    ]
%}

{% block tabs_list %}
    {{ 
        html.tabs([
            html.icon('plus-sign-alt') ~ ' Buttons/Labels/Badges',
            html.icon('table') ~ ' Data grid',
            html.icon('columns') ~ ' Decks',
            html.icon('warning-sign') ~ ' Flash messages',
            html.icon('check-sign') ~ ' Forms',
            html.icon('list-alt') ~ ' Modals',
            html.icon('comment') ~ ' Popovers',
            html.icon('tasks') ~ ' Progress bars',
            html.icon('quote-left') ~ ' Tooltips',
            html.icon('font') ~ ' Typography',
            html.icon('bar-chart') ~ ' Table with summary'
        ], active_tab)
    }}
{% endblock %}

{% set tab_buttons %}
    {% include 'lexicon/tabs/buttons_labels.html.twig' %}
{% endset %}

{% set tab_data_grid %}
    {% include 'lexicon/tabs/datagrid.html.twig' %}
{% endset %}

{% set tab_decks %}
    {% include 'lexicon/tabs/decks.html.twig' %}
{% endset %}

{% set tab_flash %}
    {% include 'lexicon/tabs/flash.html.twig' %}
{% endset %}

{% set tab_forms %}
    {% include 'lexicon/tabs/forms.html.twig' %}
{% endset %}

{% set tab_modals %}
    {% include 'lexicon/tabs/modals.html.twig' %}
{% endset %}

{% set tab_popovers %}
    {% include 'lexicon/tabs/popovers.html.twig' %}
{% endset %}

{% set tab_progress_bars %}
    {% include 'lexicon/tabs/progress_bars.html.twig' %}
{% endset %}

{% set tab_tooltips %}
    {% include 'lexicon/tabs/tooltips.html.twig' %}
{% endset %}

{% set tab_typography %}
    {% include 'lexicon/tabs/typography.html.twig' %}
{% endset %}

{% set tab_form_summary %}
    {% include 'lexicon/tabs/analytics.html.twig' %}
{% endset %}

{% block tabs_content %}
    {{ html.tabs_content([
      tab_buttons,
      tab_data_grid, 
      tab_decks, 
      tab_flash, 
      tab_forms, 
      tab_modals, 
      tab_popovers, 
      tab_progress_bars, 
      tab_tooltips, 
      tab_typography, 
      tab_form_summary
    ], active_tab) }}
{% endblock %}
