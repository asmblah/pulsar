{% import 'pulsar/v2/helpers/html.html.twig' as html %}
{% import 'pulsar/v2/helpers/form.html.twig' as form %}
{% import 'pulsar/helpers/flash.html.twig' as flash %}
<h2 class="heading">{{ heading|raw }}</h2>

<div class="tab__inner tab--padded">
    <h2>Decks</h2>

    {{
        html.button({
            'label': 'A simple deck',
            'type': 'link',
            'href': '#deck-simple',
            'data-toggle': 'deck'
        })
    }}

    {{
        html.button({
            'label': 'A multi-slide deck',
            'type':  'link',
            'href': '#deck-multi',
            'data-toggle': 'deck'
        })
    }}

    {{
        html.button({
            'label': 'An AJAXY deck',
            'type': 'link',
            'href': '#deck-ajax',
            'data-toggle': 'deck'
        })
    }}

</div>

<div class="deck" id="deck-simple">
    <div class="slide">
        <div class="slide-inner">
            <button class="close" data-dismiss="deck">×</button>
            {{ form.create() }}

            <h2 class="slide__title">Deck Slide</h2>

            {{
                form.text({
                    'label': 'Text input',
                    'id': 'deckInputText',
                    'name': 'deckInputText',
                    'placeholder': 'Placeholder'
                })
            }}
            {{
                form.checkbox({
                    'label': 'Checkbox with left label',
                    'id': 'deckInputCheckboxLeft',
                    'name': 'deckInputCheckboxLeft',
                    'checked': true
                })
            }}
            {{
                form.file({
                    'label': 'File input',
                    'id': 'deckInputFile',
                    'name': 'deckInputFile'
                })
            }}
            {{
                form.select({
                    'label': 'Select input',
                    'id': 'deckInputSelect',
                    'name': 'deckInputSelect',
                    'options': {
                        'value1': 'value one',
                        'value2': 'value two'
                    }
                })
            }}
            {{
                form.textarea({
                    'label': 'Textarea (4 rows)',
                    'id': 'deckInputTextarea4',
                    'name': 'deckInputTextarea4',
                    'placeholder': 'Placeholder',
                    'rows': 4
                })
            }}
            {{
                form.end({
                    'actions': [
                        form.submit({
                            'label': 'Save',
                            'class': 'btn--primary'
                        })
                    ]
                })
            }}
        </div>
    </div>
</div>


<div class="deck" id="deck-multi">
    <div class="slide" id="slide-1">
        <div class="slide-inner">
            <button class="close" data-dismiss="deck">×</button>
            {{ form.create() }}
            <h2 class="slide__title">Slide One</h2>

            {{
                form.textarea({
                    'label': 'Textarea',
                    'id': 'deckInputTextarea4',
                    'name': 'deckInputTextarea4',
                    'placeholder': 'Placeholder'
                })
            }}
            {{
                form.end({
                    'actions': [
                        html.button({
                            'label': 'Show me slide 2 ' ~ html.icon('arrow-right'),
                            'class': 'btn--primary',
                            'type': 'link',
                            'href': '#slide-2',
                            'data-toggle': 'slide'
                        }),
                        html.button({
                            'label': 'Close this Slide',
                            'type': 'link',
                            'data-dismiss': 'slide'
                        }),
                        html.button({
                            'label': 'Close all Slides',
                            'type': 'link',
                            'data-dismiss': 'deck'
                        })
                    ]
                })
            }}
        </div>
    </div>
    <div class="slide" id="slide-2">
        <div class="slide-inner">
            <button class="close" data-dismiss="deck">×</button>
            {{ form.create() }}
            <h2 class="slide__title">Slide Two</h2>
            {{
                form.textarea({
                    'label': 'Textarea',
                    'id': 'deckInputTextarea5',
                    'name': 'deckInputTextarea5',
                    'placeholder': 'Placeholder'
                })
            }}
            {{
                form.end({
                    'actions': [
                        html.button({
                            'label': 'Show me Slide 3 ' ~ html.icon('arrow-right'),
                            'class': 'btn--primary',
                            'type': 'link',
                            'href': '#slide-3',
                            'data-toggle': 'slide'
                        }),
                        html.button({
                            'label': 'Close this Slide',
                            'type': 'link',
                            'data-dismiss': 'slide'
                        }),
                        html.button({
                            'label': 'Close all Slides',
                            'type': 'link',
                            'data-dismiss': 'deck'
                        })
                    ]
                })
            }}
        </div>
    </div>
    <div class="slide" id="slide-3">
        <div class="slide-inner">
            <button class="close" data-dismiss="deck">×</button>
            {{ form.create() }}
            <h2 class="slide__title">Slide Three</h2>
            {{
                form.textarea({
                    'label': 'Textarea',
                    'id': 'deckInputTextarea6',
                    'name': 'deckInputTextarea',
                    'placeholder': 'Placeholder'
                })
            }}
            {{
                form.end({
                    'actions': [
                        html.button({
                            'label': 'Close this Slide',
                            'type': 'link',
                            'data-dismiss': 'slide'
                        }),
                        html.button({
                            'label': 'Close all Slides',
                            'type': 'link',
                            'data-dismiss': 'deck'
                        })
                    ]
                })
            }}
        </div>
    </div>
</div>

<div class="deck" id="deck-ajax" data-deck-source="/views/lexicon/decks/deck-example.html.twig"></div>
