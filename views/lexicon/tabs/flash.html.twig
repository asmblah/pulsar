{% extends "@pulsar/pulsar/components/tab.html.twig" %}
{% import 'pulsar/v2/helpers/html.html.twig' as html %}
{% import 'pulsar/v2/helpers/form.html.twig' as form %}
{% import 'pulsar/v2/helpers/flash.html.twig' as flash %}

{% block tab_content %}

	<div class="example">
		{{
			flash.message({
				'message': 'This is the default message style',
				'sticky': false
			})
		}}
	</div>
	<div class="example">
		{{
			flash.message({
				'message': 'This is the success style',
				'type': 'success',
				'sticky': false
			})
		}}
	</div>
	<div class="example">
		{{
			flash.message({
				'message': 'This is the warning style',
				'type': 'warning',
				'sticky': false
			})
		}}
	</div>
	<div class="example">
		{{
			flash.message({
				'message': 'This is the error style',
				'type': 'error',
				'sticky': false
			})
		}}
	</div>
	<div class="example">
		{{
			flash.message({
				'message': 'This is the info style',
				'type': 'info',
				'sticky': false
			})
		}}
	</div>
	<div class="example">
		{{
			flash.message({
				'message': 'You can dismiss this message',
				'type': 'success',
				'sticky': false,
				'autohide': false
			})
		}}
	</div>

{% endblock tab_content %}
