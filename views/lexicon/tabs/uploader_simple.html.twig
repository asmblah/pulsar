{% import 'pulsar/v2/helpers/html.html.twig' as html %}
{% import 'pulsar/helpers/form.html.twig' as form %}
{% import 'pulsar/helpers/flash.html.twig' as flash %}
{% import 'pulsar/helpers/datagrid.html.twig' as datagrid %}

<h2 class="heading">{{ heading|raw }}</h2>

<div class="tab__inner tab--padded">

	<p>Simple uploader</p>

	<div class="uploader">
		<ol class="block-list block-list--bordered">
			<li class="block-list__item">
				<label for="file-a" href="#">
					{{ form.file(id = 'file-a', class = 'hide') }}
					<span class="uploader__label">No file selected</span>
				</label>
			</li>
		</ol>
		{{
			html.button({
				'label': 'Upload File',
				'class': 'btn--primary hide',
				'data': {
					'action': 'upload'
				}
			})
		}}
		{{
			html.button({
				'label': 'Add File',
				'data': {
					'action': 'browse'
				}
			})
		}}
	</div>

</div>
