<div class="tab__inner tab--padded">

	<h3>Simple Rich List</h3>

	<div class="richer-list">
		<div class="richer-list__items-container">
			<ol class="richer-list__items">
				<li class="richer-list__item is-selected"><span>This item has <code>.is-selected</code></span></li>
				{% for i in 1..10 %}
				<li class="richer-list__item"><a href="#">Item using a link</a></li>
				<li class="richer-list__item"><span>Item using a span</span></li>
				{% endfor %}
			</ol>
		</div>
		<div class="richer-list__detail">
			Detail
		</div>
	</div>

	<h3>Rich List using a table</h3>

	<div class="richer-list">
		<div class="richer-list__items-container">
			<table class="richer-list__items">
				<thead>
					<tr class="richer-list__item">
						<th>Col 1</th>
						<th>Col 2</th>
						<th>Col 3</th>
					</tr>
				</thead>
				<tbody>
					{% for i in 1..10 %}
					<tr class="richer-list__item">
						<td>Row {{ i }}</td>
						<td>Row {{ i }}</td>
						<td>Row {{ i }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="richer-list__detail">
			Detail
		</div>
	</div>

	<h3>Paginated Rich List</h3>

	<div class="richer-list richer-list__paginated">
		<div class="richer-list__items-container">
			<table class="richer-list__items">
