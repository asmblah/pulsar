{% import 'pulsar/v2/helpers/html.html.twig' as html %}
{% import 'pulsar/v2/helpers/form.html.twig' as form %}

<div class="tab__inner tab--padded">

    <h1 class="tab__title">Loading indicator</h1>

    <h2 class="heading">Standalone</h2>
    {{ html.loading() }}
    <br />

    <h2 class="heading">After form inputs</h2>
    {{ form.create() }}
    {{
        form.select({
            'label': 'Select input',
            'class': 'form__group--small is-loading',
            'id': 'inputSelect',
            'name': 'inputSelect',
            'options': {
                'value1': 'loading...'
            }
        })
    }}
    </form>

</div>
