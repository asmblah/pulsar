{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Form Helpers' %}

{% set tab_text %}{% include 'lexicon/forms/text.html.twig' %}{% endset %}
{% set tab_choice %}{% include 'lexicon/forms/choice.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "class": "is-active",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/app.php/lexicon"
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/app.php/lexicon/modules.html.twig",
                        "class": "is-active"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/app.php/lexicon/patterns.html.twig"
                    }
                }
            }
        },
        "2": {
            "label": "Forms",
            "class": "",
            "href": "/app/app.php/lexicon/forms.html.twig",
            "icon": "check"
        },
        "3": {
            "label": "Docs",
            "class": "",
            "href": "http://jadu.gitbooks.io/pulsar/",
            "icon": "book"
        }
    }
%}

{%
    set tabs_content = [
        {
          "id"    : "text",
          "label" : "Text",
          "src"   : tab_text,
          "active": true
        },
        {
          "id"    : "choice",
          "label" : "Choice",
          "src"   : tab_choice
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

{% block javascript %}
{% endblock %}
