{%
    set tabs_content = [
        {
          "id"    : "buttongroup",
          "label" : "Button Group",
          "src"   : tab_buttongroup
        },
        {
          "id"    : "checkbox",
          "label" : "Checkbox",
          "src"   : tab_checkbox
        },
        {
          "id"    : "choice",
          "label" : "Choice",
          "src"   : tab_choice
        },
        {
          "id"    : "date",
          "label" : "Date",
          "src"   : tab_date,
          "active": true
        },
        {
          "id"    : "file",
          "label" : "File",
          "src"   : tab_file
        },
        {
          "id"    : "radio",
          "label" : "Radio",
          "src"   : tab_radio
        },
        {
          "id"    : "select",
          "label" : "Select",
          "src"   : tab_select
        },
        {
          "id"    : "select2",
          "label" : "Select2",
          "src"   : tab_select2
        },
        {
          "id"    : "password",
          "label" : "Password",
          "src"   : tab_password
        },
        {
          "id"    : "text",
          "label" : "Text",
          "src"   : tab_text
        },
        {
          "id"    : "textarea",
          "label" : "Textarea",
          "src"   : tab_textarea
        },
        {
          "id"    : "toggleswitch",
          "label" : "Toggle Switch",
          "src"   : tab_toggleswitch
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

