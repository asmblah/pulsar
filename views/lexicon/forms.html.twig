{% set tab_date %}{% include 'lexicon/forms/date.html.twig' %}{% endset %}
{% set tab_password %}{% include 'lexicon/forms/password.html.twig' %}{% endset %}
{% set tab_choice %}{% include 'lexicon/forms/choice.html.twig' %}{% endset %}
