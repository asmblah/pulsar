{% set tab_select %}{% include 'lexicon/forms/select.html.twig' %}{% endset %}
{% set tab_select2 %}{% include 'lexicon/forms/select2.html.twig' %}{% endset %}
{% set tab_text %}{% include 'lexicon/forms/text.html.twig' %}{% endset %}
{% set tab_textarea %}{% include 'lexicon/forms/textarea.html.twig' %}{% endset %}
{% set tab_toggleswitch %}{% include 'lexicon/forms/toggle-switch.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "class": "is-active",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/app.php/lexicon"
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/app.php/lexicon/modules.html.twig",
                        "class": "is-active"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/app.php/lexicon/patterns.html.twig"
                    }
                }
            }
        },
        "2": {
            "label": "Forms",
            "class": "",
            "href": "/app/app.php/lexicon/forms.html.twig",
            "icon": "check"
