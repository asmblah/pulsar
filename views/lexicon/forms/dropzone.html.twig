{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

  {{
    form.dropzone({
        'id': 'dropzone_example_1',
        'label': 'Default options'
    })
  }}

  {{
    form.dropzone({
        'id': 'dropzone_example_2',
        'data-dropzone-max-files': '0',
        'label': 'Max files: 0'
    })
  }}

  {{
    form.dropzone({
        'id': 'dropzone_example_3',
        'data-dropzone-max-size': '0',
        'label': 'Max size: 0'
    })
  }}

  {{
    form.dropzone({
        'id': 'dropzone_example_4',
        'data-dropzone-whitelist': 'gif image',
        'label': 'Custom validation rule to accept only GIFs'
    })
  }}

{% endblock tab_content %}

{% block tab_sidebar %}
    <a href="https://jadu.gitbooks.io/pulsar/content/text.html">
        <img src="../../../images/cover.png" alt="Pulsar documentation front cover" width="157px" />
    </a>
    <br />
    {{
        html.button({
            'label': 'View Documentation',
            'type': 'link',
            'href': 'https://jadu.gitbooks.io/pulsar/content/text.html'
        })
    }}

{% endblock tab_sidebar %}
