{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.select2({
            'id': 'select2-1',
            'label': 'Select field',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }

        })
    }}

    {{
        form.select2({
            'id': 'select2-2',
            'label': 'Required',
            'required': true,
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-3',
            'label': 'Select field with help',
            'help': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-4',
            'label': 'Select field with guidance',
            'guidance': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-5',
            'label': 'Required with guidance',
            'guidance': 'Help text to give more information about expected input',
            'required': true,
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Alignment' }) }}

    {{
        form.select2({
            'id': 'select2-6',
            'label': 'Select input with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline',
            'name': 'inputSelectLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-7',
            'label': 'Select input with a longer than expected label but this time we use the form__group--top class to keep the label on a single line',
            'class': 'form__group--top',
            'name': 'inputSelectLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-8',
            'label': 'The same as above, but this time we also add the .form__group--flush class to keep everything on the left edge',
            'class': 'form__group--top form__group--flush',
            'name': 'inputSelectLong',
            'placeholder': 'Placeholder',
            'help': 'Example block-level help text here',
            'guidance': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.select2({
            'id': 'select2-9',
            'label': 'Select field with error',
            'error': 'Please complete this field',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-10',
            'label': 'Select field with multiple errors',
            'error': ['Do this', 'Do this too'],
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-11',
            'label': 'Select field with error and help',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-12',
            'class': 'has-error',
            'label': 'Select field error with help only',
            'help': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.select2({
            'id': 'select2-13',
            'label': '"class": "has-changed"',
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}
    {{
        form.select2({
            'id': 'select2-14',
            'label': '"class": "has-success"',
            'class': 'has-success',
            'help': 'Something good happened',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-15',
            'label': '"class": "has-warning"',
            'class': 'has-warning',
            'help': 'Something bad happened',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}
    {{
        form.select2({
            'id': 'select2-16',
            'label': '"class": "has-error"',
            'class': 'has-error',
            'help': 'Automatically added if using <code>error</code> option',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}
    {{
        form.select2({
            'id': 'select2-17',
            'label': '"disabled": true',
            'disabled': true,
            'help': 'Stop! Can’t touch this',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Sizes' }) }}

    {{
        form.select2({
            'id': 'select2-18',
            'label': 'Mini',
            'class': 'form__group--mini',
            'name': 'inputSelectMini',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-19',
            'label': 'Small',
            'class': 'form__group--small',
            'name': 'inputSelectSmall',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-20',
            'label': 'Medium',
            'class': 'form__group--medium',
            'name': 'inputSelectMedium',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
