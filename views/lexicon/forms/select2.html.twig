            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-24',
            'label': 'Full',
            'class': 'form__group--full',
            'name': 'inputSelectFull',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Appended &amp; Prepended' }) }}

    {{
        form.select2({
            'id': 'select2-25',
            'label': 'Prepended',
            'prepend': '£',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-26',
            'label': 'Appended',
            'append': '.00',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-27',
            'label': 'Appended with guidance',
            'append': '.00',
            'guidance': 'Help text to give more information about expected input',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-28',
