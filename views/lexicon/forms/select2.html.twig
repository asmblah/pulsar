    {{
        form.select2({
            'id': 'select2-22',
            'label': 'Large',
            'class': 'form__group--large',
            'name': 'inputSelectLarge',
            'options': {
                'value1': 'value one',
                'value2': 'value two'
            }
        })
    }}

    {{
        form.select2({
            'id': 'select2-23',
