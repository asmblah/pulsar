{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}

    {{
        form.create()
    }}

    {{
        form.textarea({
            'label': 'Textarea'
        })
    }}

    {{
        form.textarea({
            'label': 'Textarea with value',
            'value': 'My value'
        })
    }}

    {{
        form.textarea({
            'label': 'Required',
            'required': true
        })
    }}

    {{
        form.textarea({
            'label': 'Placeholder',
            'placeholder': 'Oh, hello'
        })
    }}

    {{
        form.textarea({
            'label': 'Textarea with help',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.textarea({
            'label': 'Textarea with guidance',
            'guidance': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.textarea({
            'label': 'Required with guidance',
            'guidance': 'Help text to give more information about expected input',
            'required': true
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Alignment' }) }}

    {{
            form.textarea({
                'label': 'Text input with a longer than expected label which will probably wrap multple lines and push the following input onto the next baseline',
                'name': 'inputTextLong',
                'placeholder': 'Placeholder',
                'help': 'Example block-level help text here',
                'guidance': 'Help text to give more information about expected input'
            })
        }}

        {{
            form.textarea({
                'label': 'Text input with a longer than expected label but this time we use the form__group--top class to keep the label on a single line',
                'class': 'form__group--top',
                'name': 'inputTextLong',
                'placeholder': 'Placeholder',
                'help': 'Example block-level help text here',
                'guidance': 'Help text to give more information about expected input'
            })
        }}

        {{
            form.textarea({
                'label': 'The same as above, but this time we also add the .form__group--flush class to keep everything on the left edge',
                'class': 'form__group--top form__group--flush',
                'name': 'inputTextLong',
                'placeholder': 'Placeholder',
                'help': 'Example block-level help text here',
                'guidance': 'Help text to give more information about expected input'
            })
        }}

    {{ form.fieldset_start({ 'legend': 'Errors &amp; Validation' }) }}

    {{
        form.textarea({
            'label': 'Textarea with error',
            'error': 'Please complete this field'
        })
    }}

    {{
        form.textarea({
            'label': 'Textarea with multiple errors',
            'error': ['Do this', 'Do this too']
        })
    }}

    {{
        form.textarea({
            'label': 'Textarea with error and help',
            'error': 'Please complete this field',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{
        form.textarea({
            'class': 'has-error',
            'label': 'Textarea error with help only',
            'help': 'Help text to give more information about expected input'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'States' }) }}

    {{
        form.textarea({
            'label': '"class": "has-changed"',
            'class': 'has-changed',
            'help': 'Highlight whether an action elsewhere affects an input'
        })
    }}
    {{
        form.textarea({
            'label': '"class": "has-success"',
            'class': 'has-success',
            'help': 'Something good happened'
        })
    }}

    {{
        form.textarea({
            'label': '"class": "has-warning"',
            'class': 'has-warning',
            'help': 'Something bad happened'
        })
    }}
    {{
        form.textarea({
            'label': '"class": "has-error"',
            'class': 'has-error',
            'help': 'Automatically added if using <code>error</code> option'
        })
    }}
    {{
        form.textarea({
            'label': '"disabled": true',
            'disabled': true,
            'help': 'Stop! Canâ€™t touch this'
        })
    }}

    {{ form.fieldset_end() }}
    {{ form.fieldset_start({ 'legend': 'Sizes' }) }}

    {{
        form.textarea({
            'label': 'Mini',
            'id': 'inputTextMini',
            'class': 'form__group--mini',
            'name': 'inputTextMini'
        })
    }}

    {{
        form.textarea({
            'label': 'Small',
            'id': 'inputTextSmall',
            'class': 'form__group--small',
            'name': 'inputTextSmall'
        })
    }}

    {{
        form.textarea({
            'label': 'Medium',
            'id': 'inputTextMedium',
            'class': 'form__group--medium',
            'name': 'inputTextMedium'
        })
    }}

    {{
        form.textarea({
            'label': 'Regular',
            'id': 'inputTextRegular',
            'name': 'inputTextRegular'
        })
    }}

    {{
        form.textarea({
            'label': 'Large',
            'id': 'inputTextLarge',
            'class': 'form__group--large',
            'name': 'inputTextLarge'
        })
    }}

    {{
        form.textarea({
            'label': 'Extra Large',
            'id': 'inputTextXLarge',
            'class': 'form__group--xlarge',
            'name': 'inputTextXLarge'
        })
    }}

    {{
        form.textarea({
            'label': 'Full',
            'id': 'inputTextFull',
            'class': 'form__group--full',
            'name': 'inputTextFull'
        })
    }}

    {{ form.fieldset_end() }}

    {{
        form.end()
    }}

{% endblock tab_content %}

{% block tab_sidebar %}
    <a href="https://jadu.gitbooks.io/pulsar/content/text.html">
        <img src="../../../images/cover.png" alt="Pulsar documentation front cover" width="157px" />
    </a>
    <br />
    {{
        html.button({
            'label': 'View Documentation',
            'type': 'link',
            'href': 'https://jadu.gitbooks.io/pulsar/content/text.html'
        })
    }}

{% endblock tab_sidebar %}
