{% extends '@pulsar/pulsar/layouts/tabbed.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/helpers/flash.html.twig' as flash %}
{% import '@pulsar/pulsar/helpers/tabs.html.twig' as tabs %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Modules' %}

{%
    set actions_menu = [
        html.link({
          'label': html.icon('save') ~ ' Save',
          'href': '#save'
        }),
        html.link({
          'label': html.icon('print') ~ ' Print',
          'href': '#print'
        }),
        html.divider(),
        html.link({
          'label': html.icon('trash') ~ ' Delete',
          'href': '#delete',
          'class': 'link--danger disabled',
          'attributes': 'data-on-datagrid-item-selected=enable'
        })
    ]
%}

{% set tab_decks %}{% include           'lexicon/tabs/decks.html.twig' %}{% endset %}
{% set tab_modals %}{% include          'lexicon/tabs/modals.html.twig' %}{% endset %}
{% set tab_popovers %}{% include        'lexicon/tabs/popovers.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "class": "is-active",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/lexicon/index.php/main"
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/lexicon/index.php/modules",
                        "class": "is-active"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/lexicon/index.php/patterns"
                    }
                }
            }
        },
        "2": {
            "label": "Docs",
            "class": "",
            "href": "http://jadu.gitbooks.io/pulsar/",
            "icon": "book"
        }
    }
%}

{%
    set tabs_content = [
        {
          "id"    : "decks",
          "label" : "Decks",
          "src"   : tab_decks
        },
        {
          "id"    : "modals",
          "label" : "Modals",
          "src"   : tab_modals
        },
        {
          "id"    : "popovers",
          "label" : "Popovers",
          "src"   : tab_popovers
        }
    ]
%}

{% block tabs_list %}
    {{ nav.tabs(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.tabs_content(tabs_content) }}
{% endblock %}

{% block javascript %}
{% endblock %}
