{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Patterns' %}

{%
    set actions_menu = [
        html.link({
          'label': html.icon('save') ~ ' Save',
          'href': '#save'
        }),
        html.link({
          'label': html.icon('print') ~ ' Print',
          'href': '#print'
        }),
        html.divider(),
        html.link({
          'label': html.icon('trash') ~ ' Delete',
          'href': '#delete',
          'class': 'link--danger disabled',
          'attributes': 'data-on-datagrid-item-selected=enable'
        })
    ]
%}

{% set pattern_masterswitch %}
    {% include 'lexicon/patterns/masterswitch.html.twig' %}
{% endset %}
{% set pattern_piano %}
    {% include 'lexicon/patterns/piano.html.twig' %}
{% endset %}
{% set pattern_settings %}
    {% include 'lexicon/patterns/settings.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "masterswitch",
          "label" : "Masterswitch",
          "src"   : pattern_masterswitch
        },
        {
          "id"    : "piano",
          "label" : "Piano List",
          "src"   : pattern_piano
        },
        {
          "id"    : "settings",
          "label" : "Settings",
          "src"   : pattern_settings,
                    "active": true
        }
    ]
%}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "class": "is-active",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/app.php/lexicon"
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/app.php/lexicon/modules.html.twig"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/app.php/lexicon/patterns.html.twig",
                        "class": "is-active"
                    }
                }
            }
        },
        "2": {
            "label": "Forms",
            "class": "",
            "href": "/app/app.php/lexicon/forms.html.twig",
            "icon": "check"
        },
        "3": {
            "label": "Tables",
            "class": "",
            "href": "/app/app.php/lexicon/tables.html.twig",
            "icon": "table"
        }
    }
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

{% block javascript %}
{% endblock %}
