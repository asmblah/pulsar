{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}
    <table class="table datatable table--full">
        <thead>
            <tr>
                <td class="table-responsive"></td>
                <td class="table-selection"></td>
                <th>Name</th>
                <th>IP</th>
                <th>Status</th>
                <th>Uptime</th>
                <th>Image</th>
                <th>RAM</th>
                <th class="centered">CPUs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>

{% endblock tab_content %}
{% block tab_sidebar %}
    <h2>Empty DataTable</h2>
    <p>The 'no results' message is automatically shown, and can be customised with the `data-empty-table` attribute.</p>
    <code class="hljs">
        &lt;table class="table datatable table--full" data-empty-table="Your message here"&gt; &hellip; &lt;/table&gt;
    </code>
{% endblock tab_sidebar %}
