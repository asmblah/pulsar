{% extends '@pulsar/pulsar/components/tab.html.twig' %}

{% block tab_content %}
    <table class="table datatable table--full" data-order='[[ 3, "desc" ]]'>
        <thead>
            <tr>
                <td class="table-responsive"></td>
                <th class="table-selection">
                    <input type="checkbox" class="form__control checkbox js-select-all" aria-label="Select all rows" />
                </th>
                <th><a href="#">Name</a></th>
                <th><a href="#">Created</a></th>
                <th><a href="#">IP</a></th>
                <th><a href="#">Status</a></th>
                <th><a href="#">Uptime</a></th>
                <th><a href="#">Image</a></th>
                <th><a href="#">RAM</a></th>
                <th class="centered"><a href="#">CPUs</a></th>
                <th data-orderable="false"><a href="#">Actions</a></th>
            </tr>
        </thead>
        <tbody>
            {% for i in 0..5 %}
            <tr>
                <td class="table-responsive">
                    {{
                        html.button({
                            'label': html.icon('plus-sign', { 'label': 'Expand', 'class': 'table-child-toggle' }),
                            'class': 'btn--naked'
                        })
                    }}
                </td>
                <td class="table-selection">
                    <input type="checkbox" class="form__control checkbox js-select" aria-label="Select row" />
                </td>
                <td><a href="#" class="table-link">Sysadmin - Ansible 1</a></td>
                <td>04/07/2018 12:34pm</td>
                <td class="monospace"><a href="#" class="table-link">10.101.0.175</a></td>
                <td>
                    {{
                        html.label({
                            'label': 'running',
                            'class': 'label--success'
                        })
                    }}
                </td>
                <td>3d 4h 35m</td>
                <td>{{ html.icon('linux') }} Centos 6 v1.0.2</td>
                <td>4 GB</td>
                <td class="centered">2</td>
                <td>
                    {{ html.link({ 'label': 'Reboot', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Suspend', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Shutdown', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Console', 'class': 'table-action' }) }}
                </td>

            </tr>

            <tr class="table__tr">
                <td class="table__td table-responsive">
                    {{ html.button({ 'label': html.icon('plus-sign', { 'label': 'Expand', 'class': 'table-child-toggle' }), 'class': 'btn--naked'}) }}
                </td>
                <td class="table__td table-selection">
                    <input type="checkbox" class="form__control checkbox js-select" aria-label="Select row" />
                </td>
                <td><a href="#" class="table-link">Sysasdmin - WISP 1</a></td>
                <td>04/07/2018 12:34pm</td>
                <td class="monospace"><a href="#" class="table-link">10.101.0.138</a></td>
                <td>
                    {{
                        html.label({
                            'label': 'suspended'
                        })
                    }}
                </td>
                <td>17w 3d 4h 35m</td>
                <td>{{ html.icon('windows') }} Windows Server 2012 R2 v1.0.0</td>
                <td>2 GB</td>
                <td class="centered">1</td>
                <td>
                    {{ html.link({ 'label': 'Reboot', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Suspend', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Shutdown', 'class': 'table-action' }) }}<!--
                    -->{{ html.link({ 'label': 'Console', 'class': 'table-action' }) }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock tab_content %}
{% block tab_sidebar %}
    <h2>DataTable</h2>
    <ul>
        <li>Same structure as basic table</li>
        <li>Addition of <code>datatable</code> class invokes DataTables plugin</li>
        <li>Cells collapse when responsive</li>
        <li>Automatic pagination</li>
    </ul>
    <code class="hljs">
        &lt;table class="table datatable table--full"&gt; &hellip; &lt;/table&gt;
    </code>
{% endblock tab_sidebar %}
