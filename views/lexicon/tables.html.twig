{% extends '@pulsar/pulsar/layouts/base.html.twig' %}

{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/tabs.html.twig' as tabs %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = 'Tables' %}

{% set tab_buttongroup %}{% include 'lexicon/tables/basic.html.twig' %}{% endset %}
{% set tab_datatable %}{% include 'lexicon/tables/datatable.html.twig' %}{% endset %}
{% set tab_datatable_empty %}{% include 'lexicon/tables/datatable-empty.html.twig' %}{% endset %}
{% set tab_datagrid %}{% include 'lexicon/tables/datagrid.html.twig' %}{% endset %}
{% set tab_formtable %}{% include 'lexicon/tables/form-tables.html.twig' %}{% endset %}
{% set tab_sortable %}{% include 'lexicon/tables/sortable.html.twig' %}{% endset %}

{%
    set nav_data = {
        "1": {
            "label": "Lexicon",
            "href": '#lexicon',
            "icon": "info-sign",
            "items": {
                "1.1": {
                    "1.1.1": {
                        "label": "Components",
                        "href": "/app/app.php/lexicon",
                    },
                    "1.1.2": {
                        "label": "Modules",
                        "href": "/app/app.php/lexicon/modules.html.twig"
                    },
                    "1.1.3": {
                        "label": "Patterns",
                        "href": "/app/app.php/lexicon/patterns.html.twig"
                    }
                }
            }
        },
        "2": {
            "label": "HTML helpers",
            "class": "",
            "href": "/app/app.php/lexicon/html.html.twig",
            "icon": "code"
        },
        "3": {
            "label": "Form helpers",
            "class": "",
            "href": "/app/app.php/lexicon/forms.html.twig",
            "icon": "check"
        },
        "4": {
            "label": "Patterns",
            "class": "",
            "href": "#patterns",
            "icon": "cubes",
            "items": {
                "4.1": {
                    "4.1.1": {
                        "label": "Reporting",
                        "href": "/app/app.php/lexicon/patterns/reporting/"
                    }
                }
            }
        },
        "5": {
            "label": "Tables",
            "class": "is-active",
            "href": "/app/app.php/lexicon/tables.html.twig",
            "icon": "table"
        },
        "6": {
            "label": "Utilities",
            "class": "",
            "href": "/app/app.php/lexicon/utilities.html.twig",
            "icon": "wrench"
        }
