%}

{%
    set tabs_content = [
        {
          "id"    : "basic",
          "label" : "Basic Table",
          "src"   : tab_buttongroup
        },
        {
          "id"    : "datatable",
          "label" : "DataTable",
          "src"   : tab_datatable
        },
        {
          "id"    : "datatable-empty",
          "label" : "DataTable (empty)",
          "src"   : tab_datatable_empty
        },
        {
          "id"    : "datagrid",
          "label" : "Datagrid " ~ html.label({'label': 'retired'}),
          "src"   : tab_datagrid
        },
        {
          "id"    : "formtables",
          "label" : "Form Tables",
          "src"   : tab_formtable
        },
        {
          "id"    : "sortable",
          "label" : "Sortable Tables",
          "src"   : tab_sortable,
          "active": true
        }
    ]
%}

{% block tabs_list %}
    {{ tabs.list(tabs_content) }}
{% endblock %}

{% block tabs_content %}
    {{ tabs.content(tabs_content) }}
{% endblock %}

