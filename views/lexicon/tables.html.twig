{% extends '@pulsar/lexicon/base.html.twig' %}

{% set heading = 'Tables' %}

{% set tab_buttongroup %}
    {% include 'lexicon/tables/basic.html.twig' %}
{% endset %}
{% set tab_datatable %}
    {% include 'lexicon/tables/datatable.html.twig' %}
{% endset %}
{% set tab_datatable_empty %}
    {% include 'lexicon/tables/datatable-empty.html.twig' %}
{% endset %}
{% set tab_datagrid %}
    {% include 'lexicon/tables/datagrid.html.twig' %}
{% endset %}
{% set tab_formtable %}
    {% include 'lexicon/tables/form-tables.html.twig' %}
{% endset %}
{% set tab_sortable %}
    {% include 'lexicon/tables/sortable.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "basic",
          "label" : "Basic Table",
          "src"   : tab_buttongroup
        },
        {
          "id"    : "datatable",
          "label" : "DataTable",
          "src"   : tab_datatable
        },
        {
          "id"    : "datatable-empty",
          "label" : "DataTable (empty)",
          "src"   : tab_datatable_empty
        },
        {
          "id"    : "datagrid",
          "label" : "Datagrid " ~ html.label({'label': 'retired'}),
          "src"   : tab_datagrid
        },
        {
          "id"    : "formtables",
          "label" : "Form Tables",
          "src"   : tab_formtable
        },
        {
          "id"    : "sortable",
          "label" : "Sortable Tables",
          "src"   : tab_sortable,
          "active": true
        }
    ]
%}

