{% import 'helpers/html.html.twig' as html %}
{% set cssPath  = '../css/' %}
{% set jsPath   = '../javascripts/' %}
{% set libsPath = '../libs/' %}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Pulsar{% endblock %}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="{{ cssPath ~ 'pulsar.css' }}" />

    <!--[if IE 7]>
    <link rel="stylesheet" type="text/css" href="{{ libsPath ~ 'font-awesome/css/font-awesome-ie7.min.css' }}" />
    <![endif]-->

    <!--[if lt IE 9]>
    <script type="text/javascript" src="{{ libsPath ~ 'respond/respond.min.js' }}"></script>
    <![endif]-->
</head>
<body>

    <header id="top">
    	<div class="toolbar">
            <h1 class="brand">{{ html.link('Jadu', '/search') }}</h1>
        </div>

        <nav class="breadcrumb">
            <ul>
                <li><a href="#">Bread</a></li>
                <li><span>Crumb</span></li>
            </ul>
        </nav>
    </header>

    <div class="actionsbar actionsbar--left">
        {{
            html.button_group([
                html.button('<i class="icon-arrow-left"></i>', null, null, null, null, 'onclick="history.back(); return false;"'),
                html.button('Actions')
            ])
        }}
    </div>

    <!-- <h1>{{ heading }}</h1> -->

    <div class="actionsbar actionsbar--right">
        {{ html.button('Primary Action', 'btn--primary') }}
    </div>

    <div role="main" class="container">
        <div class="tabs">
            {% block tabs_list %}{% endblock %}
            {% block tabs_content %}{% endblock %}
        </div>
    </div>

    <footer>
        {{ html.link('Back to top', '#top') }}
        {{ html.link('Jadu 1.12 &copy; 2013', '/credits') }}
    </footer>

    <script type="text/javascript" src="{{ libsPath ~ 'jquery/jquery.min.js' }}"></script>
    <script type="text/javascript" src="{{ jsPath ~ 'tabs.js' }}"></script>

</body>
</html>