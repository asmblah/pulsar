{% extends '@pulsar/pulsar/layouts/homepage.html.twig' %}
{% import '@pulsar/pulsar/v2/helpers/html.html.twig' as html %}
{% import '@pulsar/pulsar/v2/helpers/form.html.twig' as form %}
{% import '@pulsar/pulsar/v2/helpers/flash.html.twig' as flash %}
{% import '@pulsar/pulsar/v2/helpers/pulsar.html.twig' as pulsar %}

{% block title %}{{ parent() }}{% endblock %}

{% set heading = '' %}

{%
  set actions_menu = [
    html.link({
      'label': html.icon('plus') ~ ' Create dashboard',
      'href': '#save'
    }),
    html.link({
      'label': html.icon('save') ~ ' Save',
      'href': '#save'
    }),
    html.link({
      'label': html.icon('save') ~ ' Save as template',
      'href': '#save'
    }),
    html.link({
      'label': html.icon('share') ~ ' Share',
      'href': '#save'
    }),
    html.divider(),
    html.link({
      'label': html.icon('remove-sign') ~ ' Clear Homepage',
      'href': '#clear',
      'data': {
          'action': 'clear-homepage-confirmation'
      }
    }),
    html.link({
      'label': html.icon('trash') ~ ' Delete',
      'href': '#delete',
      'class': 'link--danger'
    })
  ]
%}

{% block summary %}
  {% set context = 'Homepage' %}
  {% include '@pulsar/pulsar/components/widget_list.html.twig' %}
{% endblock %}

{% block actionsbar %}
  {{
    html.button_group({
      'items': [
      html.button({
        'label': html.icon('undo') ~ '',
        'href': '#',
        'type': 'link',
        'data': {
          'action': 'undo'
        }
      }),
      html.button({
        'label': html.icon('rotate-right') ~ '',
        'href': '#',
        'type': 'link',
        'data': {
          'action': 'redo'
        }
      }),
      html.button({
        'label': html.icon('eye-open'),
        'class': 'focus',
        'href': '#',
        'type': 'link',
        'data': {
          'toggle': 'row-handler button'
       }
      }),
      html.button({
        'label': html.icon('mobile-phone'),
        'href': '#',
        'type': 'link',
        'data': {
          'homepage': 'mode=mobile'
       }
      }),
      html.button({
        'label': html.icon('tablet'),
        'href': '#',
        'type': 'link',
        'data': {
          'homepage': 'mode=tablet'
       }
      }),
      html.button({
        'label': html.icon('desktop'),
        'href': '#',
        'type': 'link',
        'data': {
          'homepage': 'mode=desktop'
       }
      })
      ]
    })
  }}
  {{
    html.button_group({
      'items': [
      html.button({
        'label': html.icon('grid') ~ ' Hide Grid',
        'href': '#',
        'type': 'link',
        'data': {
          'toggle': '"grid button"'
        }
      }),
      html.button({
        'label': html.icon('dashboard') ~ ' Widgets',
        'href': '#',
        'type': 'link',
        'data': {
          'toggle': 'tray data-target=#tray'
        }
      })
      ]
    })
  }}
{% endblock %}
